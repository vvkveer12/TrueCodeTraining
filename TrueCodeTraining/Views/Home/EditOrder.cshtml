
@{
    ViewBag.Title = "EditOrder";
}


<div class="row mb-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-5" style="box-shadow: 0px 0px 2px 0px grey; padding: 10px;">
        <h5 class="my-3" style="text-align:center;">Update Order Details</h5>
        <form method="post" action="/home/UpdateOrder">
            <div class="input-group mb-3">
                <span class="input-group-text bg-primary text-light me-2 w-25">OrderId</span>
                <input type="text" name="OrderId"  readonly value="@Model.OrderId" class="form-control " style="background:lightgray;padding-left:10px;" />
            </div>
            <div class="input-group mb-3">
                @{ 
                    if(ViewBag.customerData != null)
                    {
                                <select class="form-control rounded-1" name="CustomerId">
                                    @foreach (var data in ViewBag.customerData)
                                    {
                                        if(@Model.CustomerId == data.CustomerId)
                                        {
                                            <option value="@data.CustomerId" selected>@data.CustomerName</option>
                                        }
                                        <option value="@data.CustomerId">@data.CustomerName</option>
                                    }
                                </select>
                    }
                }
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text bg-primary text-light w-25 me-2">Created Date</span>
                <input type="datetime" required name="OrderDate" value="@Model.OrderDate" class="form-control" />
            </div>
            <br />
            <center><button type="submit" class="btn text-bg-primary">Update Order</button></center>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>