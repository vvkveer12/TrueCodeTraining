
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-2" style="color:black;">
        Customer Name
    </div>
    <div class="col-sm-4">
        <select class="form-control rounded rounded-1" style="border-radius:0% !important">
            <option value="">--Select Customer Name--</option>
            @foreach (var customerData in Model.CustomerList)
            {
                <option value="@customerData.Value">@customerData.Text</option>
            }
        </select>
    </div>

</div>
<div class="row mt-4">
    <div class="col-sm-2" style="color:black;">
        Order Date
    </div>
    <div class="col-sm-4">
        <input type="date" class="form-control" style="border-radius:0% !important" />
    </div>
</div>
<div class="col-sm-2">
    <button class="btn btn-primary">Add Item</button>
</div>
<div class="row mt-2">
    <table class="table table-bordered p-0" style="font-size:12px;">
        <thead style="background: #F5CEEC;">
            <tr style="color:black;">
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select class="form-control rounded-0 ps-2 ms-1" style="border-radius:0% !important" >
                        @for (int i = 0; i < Model.OrderItmes.Count; i++)
                        {
                            <option id="@Model.OrderItmes[i].ProductId">@Model.OrderItmes[i].ProductName</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="number" class="form-control rounded-0" style="border-radius:0% !important" />
                </td>
                <td>
                    <input type="number" class="form-control rounded-0" style="border-radius:0% !important" />
                </td>
                <td>
                    <input type="number" readonly class="form-control rounded-0" style="border-radius:0% !important" />
                </td>
            </tr>
            <tr style="background: #F5CEEC;color:black;">
                <td></td>
                <td>
                    <span><b>4</b></span>
                </td>
                <td></td>
                <td>
                    <span><b>32000</b></span>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="col-sm-2">
        <button class="btn btn-primary">SAVE</button>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
