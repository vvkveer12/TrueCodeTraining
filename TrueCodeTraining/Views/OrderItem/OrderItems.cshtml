
@{
    ViewBag.Title = "OrderItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<div class="col-sm-12 text-dark fs-6">
    <table class="table">
        <thead class="table-primary" style="font-size:11px;">
            <tr>
                <th>Sr.No.</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Created Date</th>
                <th>Total Quantity</th>
                <th>Total Order</th>
                <th colspan="2" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody style="font-size:12px">

            @{
                if (Model != null)
                {

                    int index = 1;
                    foreach (var data in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@data.CustomerName</td>
                            <td>@data.Address</td>
                            <td>@data.OrderDate</td>
                            <td>@data.Quantity</td>
                            <td>@data.TotalPrice</td>
                            <td>
                               
                                <i class="bi bi-trash text-danger" data-bs-toggle="modal" data-bs-target="#exampleModaldelete" style="cursor:pointer"></i>
                                
                             
                            </td>
                            <td>
                                <a href="/Customer/edit/"><i class="bi bi-pencil-square text-success"></i></a>

                            </td>

                        </tr>
                        index = index + 1;
                    }
                }
            }
        </tbody>
    </table>
</div>

